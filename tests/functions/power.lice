
function power(x: number, n: number, acc: number): number {
    if (n == 0) return acc;
    if (n == 1) return acc * x;

    if ((n % 2) ~= 0) return power(x * x, (n - 1) / 2, x * acc);
    else return power(x * x, n / 2, acc);
}

function main(): void {
    let number x = 2;
    let number n = 50;

