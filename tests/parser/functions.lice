function power(x: number, n: number): number {
    match x % 2 with {
        | 0 -> return power(x * x, n / 2);
        | 1 -> return power(x, n - 1);
    }
}

function main(): void {
    let number x = 30;
    let number n = 5;

    let number p = power(x, n);
}

main();
